<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <item android:id="@+id/menu_search_widget"
        android:title="@string/search"
        android:icon="@android:drawable/ic_menu_search"
        app:showAsAction="ifRoom"
        app:actionViewClass="android.widget.SearchView">

    </item>
    <item
        android:id="@+id/sortAction"
        android:title="@string/sort_by"
        android:icon="@drawable/sort_ic"
        app:showAsAction="always">
        <menu>

            <item
                android:id="@+id/created_date"
                android:title="@string/date_created"
                android:icon="@drawable/sort_date"/>
            <item
                android:id="@+id/recent_updated"
                android:title="@string/recently_updated"
                android:icon="@drawable/sort_date"/>
            <item
                android:id="@+id/success_fail"
                android:icon="@drawable/sort_success"
                android:title="Success/Fail Rate"
                tools:ignore="HardcodedText" />
            <item
                android:id="@+id/sort_by_rating"
                android:title="Rating"
                tools:ignore="HardcodedText"
                android:icon="@drawable/sort_rating_star"
                />
            <item
                android:id="@+id/sort_A_to_Z"
                android:title="A-Z"
                tools:ignore="HardcodedText"
                android:icon="@drawable/sort_az"/>
        </menu>

    </item>
    <item
        android:id="@+id/navigation_settings"
        android:title="Settings"
        tools:ignore="HardcodedText"
        android:icon="@drawable/ic_settings_drawable"
        app:showAsAction="ifRoom"/>

    <item
        android:id="@+id/collapse_records"
        android:title="Collapse All"
        tools:ignore="HardcodedText"
        android:icon="@drawable/shrink_icon"
        app:showAsAction="ifRoom"/>
    <item
        android:id="@+id/expand_records"
        android:title="Expand All"
        tools:ignore="HardcodedText"
        android:icon="@drawable/expand_icon"
        app:showAsAction="ifRoom"/>
